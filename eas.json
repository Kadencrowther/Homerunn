{
  "cli": {
    "version": ">= 3.13.3",
    "appVersionSource": "local"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "ios": {
        "simulator": false,
        "prebuildCommand": "cd ios && pod repo update && pod install --repo-update"
      }
    },
    "preview": {
      "distribution": "internal",
      "ios": {
        "prebuildCommand": "cd ios && pod repo update && pod install --repo-update"
      }
    },
    "production": {
      "ios": {
        "image": "latest",
        "buildConfiguration": "Release",
        "prebuildCommand": "cd ios && pod repo update && pod install --repo-update && ./fix-rct-folly.sh"
      }
    }
  }
}
